<!DOCTYPE html>
<html>
  <head>
    <title>Store1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = '<%= controller.controller_name%>'>
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Our Products"%>
    </div>
    <div id="columns">
      <div id="side">
        <div id="cart">
          <%= render @cart%>
        </div>
        <ul>
          <li><%=link_to 'Home', root_path %></li>
          <li><a href="https://www.google.com/">Questions</a></li>
          <li><a href="http://www.cnn.com">News</a></li>
          <li><a href="https://www.linkedin.com/in/boweiliang/">Contact</a></li>
          <li><%=link_to 'Product', products_path %></li>
          <li><%=link_to 'Search', search_path %>
        </ul>
        <% if session[:user_id]%>
          <ul>
            <li><%=link_to 'Carts', carts_path %></li>
            <li><%=link_to 'Line items', lineitems_path %></li>
            <li><%=link_to 'Orders', orders_path %></li>
            <li><%=link_to 'Users', users_path %></li>
          </ul>
          <%= button_to 'Logout', logout_path, method: :delete %>
        <%else%>
          <ul>
            <li><%= button_to 'Log in', login_url%></li>
          </ul>
        <%end%>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
